{
  "name": "Markdownizr",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Grab page content as markdown.",
  "homepage_url": "http://markdownizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "options_custom/index.html",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "bower_components/to-markdown/dist/to-markdown.js",
      "background.js"
    ],
    "pages": ["background.html"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "bower_components/to-markdown/dist/to-markdown.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
   "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite",
    "contextMenus",
    "http://*/*"
  ]
}